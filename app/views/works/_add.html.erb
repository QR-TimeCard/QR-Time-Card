<div class="container py-4">
	<div class="row justify-content-center">
	<%= form_for @works, url:staff_works_path(@staff) do |f| %>

		<span class="card-title text-center font-weight-bold">
			<%#= @staff.family_name %><%#= @staff.given_name %>
		</span>
		<div class="card border-secondary shadow-lg">
			<span class="card-header text-white text-center font-weight-bold" style="background-color:#F08300;">出勤</span>
				<div class="card-body bg-light">
					<p class="card-text">出勤 <%= f.datetime_select :in, :use_month_numbers => true , class: "form-control" %></p>
					<p class="card-text">退勤 <%= f.datetime_select :out, :use_month_numbers => true, class: "form-control" %></p>
				</div>
		</div>
	</div>
	<%= f.submit '更新', class:"btn btn-outline-info btn-sm", method: :patch %>
<% end %>