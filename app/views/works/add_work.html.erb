<div class="container py-4">
	<div class="row justify-content-center">
	<%= form_for @work, :url => { :controller => :works, :action => :add_work_create }, method: :post do |f| %>

		<span class="card-title text-center font-weight-bold">
			<%#= @staff.family_name %><%#= @staff.given_name %>
		</span>
		<div class="card border-secondary shadow-lg">
			<span class="card-header text-white text-center font-weight-bold" style="background-color:#F08300;">出勤</span>
				<div class="card-body bg-light">
					<p class="card-text">出勤 <%= f.datetime_select :in, :use_month_numbers => true, class: "form-control" %></p>
					<p class="card-text">退勤 <%= f.datetime_select :out, :use_month_numbers => true, :include_blank => true, class: "form-control" %></p>
				</div>
		</div>

		<%= f.fields_for :break do |t| %>
		<div class="card border-secondary shadow-lg">
			<span class="card-header text-white text-center font-weight-bold" style="background-color:#009944;">休憩</span>
				<div class="card-body bg-light" >
					<p class="card-text">休憩 <%= t.datetime_select :break_in, :use_month_numbers => true,:include_blank => true, class: "form-control" %></p>
					<p class="card-text">戻り <%= t.datetime_select :break_out, :use_month_numbers => true,:include_blank => true, class: "form-control" %></p>
				</div>
		</div>
		<% end %>

	</div>
	<%= f.submit '勤怠追加', class:"btn btn-outline-info btn-sm" %>
<% end %>